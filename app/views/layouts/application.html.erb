<!DOCTYPE html>
<html>
<head>
  <title>Itay</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if flash[:notice] %>
	<p class="notice"> <%= flash[:notice] %></p>
<% end %>
<% if flash[:alert] %>
<p class="alert"> <%= flash[:alert] %></p>
<% end %>

<div class="container">	
<%= yield %>
<% if user_signed_in? %>
<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
<% end %>
<div class="container">
</body>
</html>
